<?php

/**
 * @file
 * Main file of Chanchal Test module.
 */

/**
 * Implements hook_block_info().
 */
function chanchal_test_block_info() {
  $blocks = array();

  $blocks['chanchal_test'] = array(
    'info' => t('Chanchal Test'),
  );

  return $blocks;
}

/**
 * Implements hook_block_view().
 */
function chanchal_test_block_view($delta = '') {

switch($delta) {
    case 'chanchal_test':
      $block['subject'] = t('Chanchal Test'); // Most forms don't have a subject 
      $block['content'] = drupal_get_form('chanchal_test_form');
      break;
   }
   return $block;
 }

/**
 * hook_form implementation
 */
function chanchal_test_form($node, &$form_state){

 $form = array();

$form['title'] = array(
 '#type' => 'textfield',
 '#title' => t('Name'),
 '#size' => 18,

);

$form['keywords'] = array(
 '#type' => 'textarea',
 '#title' => t('Message'),
 
);



$form['selectbox'] = array(
    '#type' => 'select',
    '#title' => t('Select box'),
    '#options' => array(
      1 => 'Option A',
      2 => 'Option B',
      3 => 'Option C',
    ),
    '#description' => t('Choose an option.'),
  );

$form['submit'] = array(
	'#type' => 'submit', 
	'#value' => t('SUBMIT')
);


 return $form;
}


